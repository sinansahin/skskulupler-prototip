<%= render "home/header" %>
<div class="jumbotron">
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-5">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Giriş Yap</h3>
        </div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form_control"}) do |f| %>
          <fieldset>
          <div class="form-group">
            <div class="col-lg-10">
            <%= f.input :email, autofocus: true, class: "form_control", label:"E-Posta" %>
            <%= f.input :password, autocomplete: "off", class: "form_control", label:"Parola"  %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
            <%= f.label :remember_me %>
              <%= f.check_box :remember_me %>
              
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Giriş", class: "btn btn-primary" %>
            <%= render "devise/shared/links" %>
          </div>
         </fieldset>
          <% end %>
          
          </div>
        </div>
      </div>
    </div>
</div>